def surfaceareaofcuboid(a,b,c):
    surface_area = 2*(areaofrectangle(l,b)+areaofrectangle(l,w)+areaofrectangle(b,w))
    return surface_area
choice = input("do you want to calculate the surface area of a cuboid : \n")
